{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@buildflow/shared": ["../../packages/shared/src/index.ts"],
      "@buildflow/shared/*": ["../../packages/shared/src/*"],
      "@buildflow/events/*": ["../../packages/events/src/*"],
      "@buildflow/db": ["../../packages/db/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts"]
}


