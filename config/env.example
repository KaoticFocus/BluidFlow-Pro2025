# ============================================================================
# BuildFlow Pro Environment Variables
# Copy this file to .env.local and fill in the values
# ============================================================================

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/buildflow_dev?schema=public"

# API
API_URL="http://localhost:3001"
PORT=3001

# Session
SESSION_SECRET="your-session-secret-min-32-chars-here"

# OpenAI
OPENAI_API_KEY="sk-..."

# Redis (for BullMQ queues)
REDIS_URL="redis://localhost:6379"

# Cloudflare R2 Storage
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="buildflow-uploads"

# Email (Resend)
RESEND_API_KEY=""
EMAIL_FROM="BuildFlow <noreply@yourdomain.com>"

# SMS (Twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Feature Flags (Flagsmith)
FLAGSMITH_API_KEY=""
FLAGSMITH_API_URL="https://edge.api.flagsmith.com/api/v1"

# Observability
SENTRY_DSN=""
POSTHOG_API_KEY=""
POSTHOG_HOST="https://app.posthog.com"

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
